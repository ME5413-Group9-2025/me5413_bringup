<!--         <arg name="initial_pose_a"  value="$(arg initial_pose_a)"/> -->
<!--   </include> -->

<!-- 启动 Frontier Exploration -->
    <node pkg="frontier_exploration" type="explore_client" name="explore_client" output="screen"/>
    <node pkg="frontier_exploration" type="explore_server" name="explore_server" output="screen">
        <param name="frequency" value="1.0"/>
        <param name="goal_aliasing" value="2.0"/>
        <param name="explore_clear_space" value="false"/> <!-- 仅探索未知区域 -->
        <rosparam file="$(find me5413_world)/config/costmap_common_params_fe.yaml" command="load" ns="explore_costmap"/>
        <rosparam file="$(find me5413_world)/config/costmap_exploration.yaml" command="load" ns="explore_costmap"/>
    </node>

  <!-- Map Server-->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <include file="$(find me5413_bringup)/launch/slam/cartographer_localization.launch">
  </include>

  <include file="$(find me5413_bringup)/launch/navigation/move_base.launch" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find me5413_bringup)/rviz/gazebo.rviz" />

</launch>
