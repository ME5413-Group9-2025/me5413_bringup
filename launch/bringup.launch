<launch>
  <arg name="base_frame_id"     default="base_link" />
  <arg name="odom_frame_id"     default="odom" />
  <arg name="global_frame_id"   default="map" />
  <arg name="scan_topic"        default="scan"/>
  <arg name="initial_pose_x"    default="1.5"/>
  <arg name="initial_pose_y"    default="1.5"/>
  <arg name="initial_pose_a"    default="0"/>

  <include file="$(find me5413_bringup)/launch/slam/amcl.launch">
        <arg name="base_frame_id"   value="$(arg base_frame_id)" />
        <arg name="odom_frame_id"   value="$(arg odom_frame_id)" />
        <arg name="global_frame_id" value="$(arg global_frame_id)" />
        <arg name="scan_topic"      value="$(arg scan_topic)"/>
        <arg name="initial_pose_x"  value="$(arg initial_pose_x)"/>
        <arg name="initial_pose_y"  value="$(arg initial_pose_y)"/>
        <arg name="initial_pose_a"  value="$(arg initial_pose_a)"/>
  </include>

  <include file="$(find me5413_bringup)/launch/navigation/move_base.launch" />

  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find me5413_bringup)/rviz/gazebo.rviz" />

</launch>